# Next.js Configuration  
NEXT_PUBLIC_BASE_URL=https://integridai-mcp.netlify.app
NODE_ENV=development

# MCP OAuth Configuration
MCP_OAUTH_CLIENT_ID=your_oauth_client_id_here
MCP_OAUTH_CLIENT_SECRET=your_oauth_client_secret_here
MCP_OAUTH_ISSUER=https://oauth.mcpauth.com
MCP_OAUTH_REDIRECT_URL=https://integridai-mcp.netlify.app/.netlify/functions/auth-callback

# Redis Configuration (Upstash)
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_redis_token_here

# Database Configuration (Supabase PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/database?schema=public
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Netlify Functions Integration
NETLIFY_API_TOKEN=your_netlify_api_token_here
NETLIFY_FUNCTION_BASE_URL=https://integridai.netlify.app/.netlify/functions

# Storage Configuration (Optional: R2/S3 for artifacts)
STORAGE_BUCKET=integridai-artifacts
STORAGE_REGION=us-east-1
STORAGE_ACCESS_KEY_ID=your_access_key_here
STORAGE_SECRET_ACCESS_KEY=your_secret_key_here
STORAGE_ENDPOINT=https://your-r2-endpoint.com

# OpenRouter API (for existing Netlify functions)
OPENROUTER_API_KEY=your_openrouter_api_key_here