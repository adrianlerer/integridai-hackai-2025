# ðŸš€ IntegridAI HackAI 2025 - Environment Variables Example
# Copy to .env.local and customize for your development

# ===========================================
# DEVELOPMENT ENVIRONMENT
# ===========================================
NODE_ENV=development
APP_ENV=hackathon
PORT=3000

# ===========================================
# DATABASE (SQLite for development)
# ===========================================
DATABASE_URL=sqlite:./data/hackathon.db
DATABASE_TYPE=sqlite

# ===========================================
# MOCK APIS (Safe for hackathon)
# ===========================================
# These are demo endpoints - not real government APIs
MOCK_AFIP_API_URL=http://localhost:3001/mock/afip
MOCK_BCRA_API_URL=http://localhost:3001/mock/bcra
MOCK_CNV_API_URL=http://localhost:3001/mock/cnv
MOCK_UIF_API_URL=http://localhost:3001/mock/uif

# Mock API Keys (Safe demo keys)
DEMO_AFIP_KEY=demo_afip_hackathon_2025
DEMO_BCRA_TOKEN=demo_bcra_hackathon_2025
DEMO_CNV_SECRET=demo_cnv_hackathon_2025
DEMO_UIF_ACCESS=demo_uif_hackathon_2025

# ===========================================
# AI AGENTS CONFIGURATION (OpenRouter)
# ===========================================
# Demo OpenRouter key for hackathon (limited credits)
OPENROUTER_API_KEY=your_demo_openrouter_key_here

# Cost-optimized models for hackathon demos
CATALINA_MODEL=openai/gpt-3.5-turbo
ALEXIS_MODEL=anthropic/claude-3-haiku-20240307
GUARDIAN_MODEL=openai/gpt-3.5-turbo

# Agent limits for demo mode
MAX_TOKENS_DEMO=800
DEMO_MODE=true

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
REACT_APP_API_BASE_URL=http://localhost:3000/api
REACT_APP_MOCK_MODE=true
REACT_APP_ENVIRONMENT=hackathon

# ===========================================
# ANALYTICS & MONITORING
# ===========================================
ANALYTICS_ENABLED=true
DEMO_METRICS_INTERVAL=30000
LOG_LEVEL=debug

# ===========================================
# FEATURES FLAGS
# ===========================================
FEATURE_REGTECH_MODULE=true
FEATURE_FLAISIMULATOR_MODULE=true
FEATURE_DASHBOARD_MODULE=true
FEATURE_MOBILE_API=true

# ===========================================
# SECURITY (Development only)
# ===========================================
JWT_SECRET=hackathon_jwt_secret_not_for_production
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
RATE_LIMIT_REQUESTS=1000

# ===========================================
# INTEGRATIONS
# ===========================================
# Demo endpoints for team integration
FLAISIMULATOR_API=http://localhost:8000/api/v1
REGTECH_API=http://localhost:3000/api
DASHBOARD_API=http://localhost:5000/api

# ===========================================
# DEPLOYMENT (For hackathon demos)
# ===========================================
VERCEL_URL=your-team-name.vercel.app
NETLIFY_URL=your-team-name.netlify.app

# ===========================================
# TEAM CONFIGURATION
# ===========================================
TEAM_NAME=your-team-name-here
CHALLENGE_FOCUS=frontend|backend|analytics|mobile
UNIVERSITY_EMAIL=your.student@austral.edu.ar